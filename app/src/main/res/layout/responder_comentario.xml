<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3e000000"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <FrameLayout
                android:id="@+id/imgFrameRes"
                android:layout_weight="0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="2dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgComentRes"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/default_avatar"
                    android:layout_gravity="center"
                    />
            </FrameLayout>
            <TextView
                android:id="@+id/NomeComentRes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="12dp"
                android:layout_weight="6"
                android:layout_gravity="center_vertical"
                android:textColor="@color/tabIndicadorColor"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dataComentRes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/tabIndicadorColor"/>
                <Button
                    android:id="@+id/btn_excluirRes"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="1dp"
                    android:layout_marginRight="3dp"
                    android:layout_gravity="right"
                    android:background="@drawable/btn_excluir"/>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txtComentRes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tabIndicadorColor"
            android:textSize="14dp"
            android:text="Texto"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

</ScrollView>
