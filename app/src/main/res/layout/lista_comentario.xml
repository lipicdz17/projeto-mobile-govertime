<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/statusbBtn"
            android:text="mostrar"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp">

            <FrameLayout
                android:id="@+id/imgFrame"
                android:layout_weight="0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="2dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgComent"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/default_avatar"
                    android:layout_gravity="center"
                    />
            </FrameLayout>
            <TextView
                android:id="@+id/NomeComent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dp"
                android:layout_weight="6"
                android:layout_gravity="center_vertical"
                android:textColor="@color/tabIndicadorColor"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="7"
                android:layout_gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dataComent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/tabIndicadorColor"/>

                <Button
                    android:id="@+id/btn_excluir"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="1dp"
                    android:layout_marginRight="3dp"
                    android:layout_gravity="right"
                    android:background="@drawable/btn_excluir"/>

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txtComent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tabIndicadorColor"
            android:textSize="16dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <TextView
                android:id="@+id/btnComentarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Comentarios"
                android:textColor="#d6d2d2"
                android:onClick="Comentarios"
                android:textAlignment="viewEnd"/>

            <TextView
                android:id="@+id/btnResponder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Responder"
                android:layout_weight="8"
                android:textColor="#d6d2d2"
                android:layout_marginRight="10dp"
                android:textAlignment="viewEnd"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="2dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/listaRespostas"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:id="@+id/layoutResposta"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                android:layout_gravity="bottom"
                android:visibility="gone"
                android:background="@drawable/botao_votar">

                <EditText
                    android:id="@+id/edtComentRes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tabIndicadorColor"
                    android:textColorHint="@color/tabIndicadorColor"
                    android:paddingTop="5dp"
                    android:paddingLeft="2dp"
                    android:inputType="textMultiLine"
                    android:hint="Deixe um comentario..."
                    android:layout_weight="4"
                    />

                <ImageButton
                    android:id="@+id/btn_sendComentRes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_menu_send"
                    android:padding="20dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="20"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
